<Window x:Class="FgsfdsGame.Pages.AnswerDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Дверь мне запили" MinHeight="50" Width="300">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="1*" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <TextBlock Text="{Binding Question}" />
    <TextBox Grid.Row="1" Name="AnswerBox" Margin="10,2"/>

    <StackPanel Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal">
      <Button Content="OK" MinWidth="80" Click="OKButtonClick" />
      <Button Content="Отмена" MinWidth="80" Click="CancelButtonClick" />
    </StackPanel>
  </Grid>
</Window>